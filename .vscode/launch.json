{
    "configurations": [
        {
            "name": "Gunicorn",
            "python": "/usr/bin/python3",
            "type": "debugpy",
            "request": "launch",
            "module": "gunicorn",
            "env": {
                "PYGEOAPI_CONFIG": "local.config.yml",
                "PYGEOAPI_OPENAPI": "local.openapi.yml"
            },
            "args": [
                "pygeoapi.flask_app:APP"
            ]
        },
        {
            "name": "Pytest",
            "python": "/usr/bin/python3",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ]
        },
        // {
        //     "name": "Python Debugger: Attach using Process Id",
        //     "type": "debugpy",
        //     "request": "attach",
        //     "processId": "${command:pickProcess}"
        // },
        {
            "name": "Python: Webapp",
            "type": "python",
            "request": "launch",
            "python": "/usr/bin/python3",
            "module": "gunicorn",
            "gevent": true,
            "args": [
                "pygeoapi.flask_app:APP",
                "--worker-class=gevent",
                "--bind=127.0.0.1:8080",
                "--reload",
            ],
            "env": {
                "PYGEOAPI_CONFIG": "local.config.yml",
                "PYGEOAPI_OPENAPI": "local.openapi.yml"
            },
        },
    ]
}